{
  "mappings": {
    "dynamic_templates": [
      {
        "strings_as_keyword" : {
          "match_mapping_type" : "string",
          "mapping" : {
            "ignore_above" : 1024,
            "type" : "keyword"
          }
        }
      }
    ],
    "properties" : {
      "@timestamp" : {
        "type" : "date"
      },
      "id" : {
        "type" : "keyword"
      },
      "item_category" : {
        "type" : "keyword"
      },
      "item_count" : {
        "type" : "integer"
      },
      "item_created_at" : {
        "type" : "date",
        "format" : "yyyy-MM-dd HH:mm:ss"
      },
      "item_description" : {
        "type" : "text"
      },
      "item_id" : {
        "type" : "keyword"
      },
      "item_name" : {
        "type" : "keyword"
      },
      "item_price" : {
        "type" : "integer"
      },
      "status" : {
        "type" : "keyword"
      }
    }
  }
}
